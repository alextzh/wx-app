<view class="container">
    <view class="logo">
      <image style="width: 480rpx;height: 124rpx;" src="{{img_logo}}"></image>
    </view>
    <form class="form_area" bindsubmit="formSubmit" report-submit="true">
      <view class="input_area">
        <view class="input_form">
          <icon class="iconfont icon-phone"></icon>
          <input name="username" maxlength="11" type="number" placeholder="{{i18n.login.phoneNumber}}" />
        </view>
        <view class="input_form">
          <icon class="iconfont icon-pwd"></icon>
          <input name="password" minlength="6" maxlength="20" type="password" placeholder="{{i18n.login.password}}" />
        </view>
      </view>
      <view class="btn_area">
          <button disabled="{{disabled}}" formType="submit" loading="{{btnLoading}}">{{i18n.login.loginBtnTxt}}</button>
      </view>
    </form>
</view>