.item_info{
  display: flex;
  flex-direction:column;
  width: 100%;
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
}
.item_head{
  position: relative;
  line-height:60rpx;
}
.item_head icon{
  color: #F44336;
  font-size: 36rpx;
}
.item_head .title{
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #212121;
}
.item_body{
  display: flex;
  line-height: 50rpx;
}
.item__left,.item__right{
  flex: 1;
  color: #333;
  letter-spacing: 1rpx;
}
.new_data,.all_data{
  font-size: 32rpx;
  color: #F44336;
  letter-spacing: 0;
}
.item_foot{
  color: #333333;
  letter-spacing: 1rpx;
  line-height: 50rpx;
}

.form_area{
  display:flex;
  flex-direction:column;
  width:100%;
  padding: 30rpx 0;
}
.input_area{
  flex:1;
  padding:0 30rpx;
}
.input_form{
  position:relative;
  box-sizing:border-box;
  line-height: 50px;
}
.input_form icon{
  font-size:36rpx;
  position:absolute;
  left:0;
  color: #F44336;
}
.input_form .unit{
  position: absolute;
  right: 0;
  color: #f44336;
}
.input_form input{
  position:relative;
  height:50px;
  line-height:50px;
  padding:0 50rpx;
  flex:1;
  box-sizing: border-box;
}
.input_form input::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}

.btn_area{
  margin-top: 60rpx;
  padding:0 30rpx;
}
.btn_area .devide{
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
}
.btn_area .devide::after{
  position: absolute;
  width: 100%;
  height: 1px;
  top: 50%;
  transition: translateY(-50%);
  border: 1px solid #BDBDBD;
}
