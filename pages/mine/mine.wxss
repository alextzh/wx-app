page{
  background: #f4f4f4;
}
.box{
  width: 100%;
  display: flex;
  flex-direction:column;
}
.userinfo{
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 30%;
  -webkit-transform-origin: top;
  transform-origin: top;
  background: #676E78;
  background-size: cover;
  box-sizing: border-box;
  border:0;
  outline:0;
  box-shadow: 0 2px 6px rgba(0,0,0,.2);
}
.info_box{
  position:absolute;
  top:50%;
  text-align:center;
  z-index:50;
  -webkit-transform:translateY(-50%);
  transform:translateY(-50%);
  display:flex;
  align-items:center;
  box-sizing: border-box;
  width:100%;
  padding:40rpx;
}
.user_avatar{
  flex: 0 0 160rpx;
  width:160rpx;
  height:160rpx;
  border-radius: 50%;
}
.user_msg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:flex-start;
  flex: 1;
  padding-left: 40rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.user_msg .name{
  font-size: 36rpx;
  color: #fff;
}
.user_msg .mobile{
  color:#fff;
  font-size:32rpx;
}
.border {
  height: 30rpx;
  position: relative;
}
.border::after {
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.list{
  padding-bottom: 30rpx;
  display:flex;
  flex-wrap:wrap;
}
.item{
  position: relative;
  background:#fff;
  color: #333;
  transition: all .3s;
  box-sizing: border-box;
  width:33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding:40rpx;
}
.item:active{
  background: rgba(0,0,0,.1);
}
.item:active button {
  background: rgba(0,0,0,.1);
}
.item::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-right:1px solid #BDBDBD;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
  border-radius: 0;
}
.item:nth-child(3n)::after {
  border-right:0 none;
}
.item icon{
  font-size: 60rpx;
}
.item .text{
  flex: 1;
  font-size: 32rpx;
  padding-top:10px;
}
.contact {
  letter-spacing:0;
  border-radius:0;
  line-height:1.2;
}
.btn{
  width:90%;
  margin-top:60rpx;
}
.fcF44336{
  color: #F44336;
}
.fc999{color: #999999;}