page{
  background: #f4f4f4;
}
.box{
  width: 100%;
  display: flex;
  flex-direction:column;
}
.userinfo{
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 30%;
  -webkit-transform-origin: top;
  transform-origin: top;
  background: #f44336;
  background-size: cover;
  box-sizing: border-box;
  border:0;
  outline:0;
  box-shadow: 0 2px 6px rgba(0,0,0,.2);
}
.info_box{
  position:absolute;
  top:50%;
  text-align:center;
  z-index:50;
  -webkit-transform:translateY(-50%);
  transform:translateY(-50%);
  display:flex;
  align-items:center;
  box-sizing: border-box;
  width:100%;
  padding:40rpx;
}
.user_avatar{
  flex: 0 0 160rpx;
  width:160rpx;
  height:160rpx;
  border-radius: 50%;
}
.user_msg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:flex-start;
  flex: 1;
  padding-left: 40rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.user_msg .name{
  font-size: 36rpx;
  color: #fff;
}
.user_msg .mobile{
  color:#fff;
  font-size:32rpx;
}
.list{
  padding: 30rpx 0;
}
.item{
  position: relative;
  height:90rpx;
  line-height:90rpx;
  background:#fff;
  color: #333;
  padding:0 20rpx;
  margin-bottom: 15rpx;
  transition: all .3s;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.item:active{
  background: rgba(0,0,0,.1);
}
.item::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-top:1px solid #BDBDBD;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.item icon{
  font-size: 36rpx;
}
.item .text{
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
}
.online_contact{
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom:15rpx;
}
.online_contact .icon{
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: yellow;
  font-size: 36rpx;
  z-index: 9;
}
.online_contact .arraw{
  font-size: 36rpx;
  position:absolute;
  right:20rpx;
  top:50%;
  transform:translateY(-50%);
}
.contact{
  position: relative;
  font-size:32rpx;
  background:#fff;
  color:#212121;
  border-radius:0;
  text-align:left;
  padding:0 50rpx 0 74rpx;
  line-height: 90rpx;
  height: 90rpx;
}
.contact::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-radius: 0;
  border-top:1px solid #BDBDBD;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.contact .tip{
  font-size: 24rpx;
  padding: 0 20rpx;
}
.btn{
  width:90%;
  margin-top:34rpx;
}
.fcF44336{
  color: #F44336;
}
.fc999{color: #999999;}