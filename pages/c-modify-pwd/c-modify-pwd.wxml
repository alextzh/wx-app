<view class="container">
  <form class="form_area" bindsubmit="formSubmit">
    <view class="input_area">
      <view class="input_form">
        <icon class="iconfont icon-oldpwd"></icon>
        <input name="password" minlength="6" maxlength="20" type="password" placeholder="请输入原密码" />
      </view>
      <view class="input_form">
        <icon class="iconfont icon-newpwd"></icon>
        <input name="password1" minlength="6" maxlength="20" type="password" placeholder="请输入新密码" />
      </view>
      <view class="input_form">
        <icon class="iconfont icon-surepwd"></icon>
        <input name="password2" minlength="6" maxlength="20" type="password" placeholder="请再次输入新密码" />
      </view>
    </view>
    <view class="btn_area">
        <button formType="submit" loading="{{btnLoading}}" disabled="{{disabled}}">{{modifyBtnTxt}}</button>
    </view>
  </form>
</view>