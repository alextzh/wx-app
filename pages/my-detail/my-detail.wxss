.product-detail{
  width:100%;
  display:flex;
  flex-direction:column;
  padding:30rpx;
  box-sizing:border-box;
}
.item_title{
  position: relative;
  line-height:30px;
  padding-bottom: 20rpx;
}
.item_title icon{
  color: #F44336;
  font-size: 36rpx;
}
.item_title .title{
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #212121;
}
.item{
  display:flex;
  padding:10rpx 0;
}
.item__left,.item__right{
  flex: 1;
  color: #757575;
}
.new_data{
  font-size:36rpx;
  color:#F44336;
}
.item_row{
  padding: 5rpx 0;
  color: #757575;
}
.item_row:first-child{
  padding-top: 10rpx;
}
.agreement{
  padding: 40rpx 0;
  color: #F44336;
  transition: all .3s;
  display:flex;
  align-items:center;
}
.agreement_text{
  font-size: 32rpx;
  padding-left: 10rpx;
}
.agreement:active{
  color: rgba(244,67,54,.7);
}
.item_state{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  background:#999;
  color:#fff;
  letter-spacing: 1rpx;
  transition: all .3s;
}
.item_state:active{
  background: rgba(153,153,153,.7);
}