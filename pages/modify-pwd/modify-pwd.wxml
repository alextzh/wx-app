<view class="container">
  <form class="form_area" bindsubmit="formSubmit">
    <view class="input_area">
      <view class="input_form">
        <icon class="iconfont icon-oldpwd"></icon>
        <input name="password" minlength="6" maxlength="20" type="password" placeholder="{{i18n.modifyPwd.tip1}}" />
      </view>
      <view class="input_form">
        <icon class="iconfont icon-newpwd"></icon>
        <input name="password1" minlength="6" maxlength="20" type="password" placeholder="{{i18n.modifyPwd.tip2}}" />
      </view>
      <view class="input_form">
        <icon class="iconfont icon-surepwd"></icon>
        <input name="password2" minlength="6" maxlength="20" type="password" placeholder="{{i18n.modifyPwd.tip3}}" />
      </view>
    </view>
    <view class="btn_area">
        <button formType="submit" loading="{{btnLoading}}" disabled="{{disabled}}">{{i18n.modifyPwd.modifyBtnTxt}}</button>
    </view>
  </form>
</view>