.scroll_tab{
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7; 
  font-size: 16px; 
  white-space: nowrap;
  position: fixed;
  top: 0; 
  left: 0; 
  z-index: 99;
}
.tab_item{
  margin:0 36rpx;
  display: inline-block;
  color: #666;
}
.tab_item.active{
  color: #f44336;
  position: relative;
}
.tab_item.active::after{ 
  content: "";
  display: block;
  height: 8rpx;
  background: #f44336;
  position: absolute; 
  bottom: 0;
  left: 5rpx;
  right: 5rpx;
  border-radius: 16rpx;
}
.tab_content{
  margin-top: 80rpx;
}
.scoll_h{
  height: 100%;
}
.item{
  position: relative;
  padding: 20rpx;
  margin: 20rpx;
  box-sizing:border-box;
  background: #fff;
  transition: all .3s;
  border-radius: 4px;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 2px 1px -1px rgba(0,0,0,.12);
}
.item:active{
  box-shadow: 0 1px 3px 0 rgba(244,67,54,.2), 0 1px 1px 0 rgba(244,67,54,.14), 0 2px 1px -1px rgba(244,67,54,.12);
}
.item_head{
  position: relative;
  line-height:30px;
  padding-bottom:20rpx;
}
.item_head icon{
  color: #F44336;
  font-size: 36rpx;
}
.item_head .title{
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #212121;
}
.item_state{
  float: right;
  padding:0 20rpx;
  background:#F44336;
  color:#fff;
}
.item_body{
  display: flex;
  line-height: 50rpx;
}
.item__left,.item__right{
  flex: 1;
  color: #757575;
}
.new_data,.all_data{
  font-size: 32rpx;
  color: #F44336;
}
.item_foot{
  color: #757575;
}
.item_action{
  position: relative;
  margin-top:20rpx;
  padding-top:20rpx;
  border-top:1px dashed #ddd;
}
.item_action button{
  background: #F44336;
  color: #fff;
  border-radius: 4px;
  transition: all .3s;
}
.item_action button::after{
  border: none;
}
.item_action button:active{
  background: rgba(244,67,54,.7);
}