page{
  background: #f6f6f6;
}
.box{
  width: 100%;
  display: flex;
  flex-direction:column;
}
.list{
  padding: 30rpx 0;
}
.item{
  position: relative;
  height:100rpx;
  line-height:100rpx;
  background:#fff;
  color: #333;
  padding:0 20rpx;
  margin-bottom: 15rpx;
  transition: all .3s;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.item:active{
  background: rgba(0,0,0,.1);
}
.item::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-top:1px solid #BDBDBD;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.item icon{
  font-size: 36rpx;
}
.item .text{
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
}
.m_switch {
  flex:0 1 auto;
  position:relative;
  z-index:9;
  line-height:0;
}
.online_contact{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom:15rpx;
}
.online_contact .icon{
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: yellow;
  font-size: 36rpx;
  z-index: 9;
}
.online_contact .arraw{
  font-size: 36rpx;
  position:absolute;
  right:20rpx;
  top:50%;
  transform:translateY(-50%);
}
.contact{
  position: relative;
  font-size:32rpx;
  background:#fff;
  color:#212121;
  border-radius:0;
  text-align:left;
  padding:0 50rpx 0 74rpx;
  line-height: 100rpx;
  height: 100rpx;
}
.contact::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-radius: 0;
  border-top:1px solid #BDBDBD;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.contact .tip{
  font-size: 24rpx;
  padding: 0 20rpx;
}
.type_picker{
  position:absolute;
  width:100%;
  top:0;
  left:0;
  right:0;
  text-align:right;
  padding:0 20rpx;
  box-sizing:border-box;
  z-index:99;
}
.picker{
  font-size:32rpx;
}