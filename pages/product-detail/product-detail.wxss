.product-detail{
  width:100%;
  display:flex;
  flex-direction:column;
  padding:30rpx 30rpx 0;
  box-sizing:border-box;
}
.item_head{
  position: relative;
  line-height:30px;
  padding-bottom:20rpx;
}
.item_head icon{
  color: #F44336;
  font-size: 36rpx;
}
.item_head .title{
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #212121;
}
.item_body{
  display: flex;
  line-height: 50rpx;
}
.item__left,.item__right{
  flex: 1;
  color: #333333;
  letter-spacing: 1rpx;
}
.new_data,.all_data{
  font-size: 32rpx;
  color: #F44336;
  letter-spacing: 0;
}
.item_foot{
  color: #333333;
  letter-spacing: 1rpx;
  line-height: 50rpx;
}
.form_area {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 50rpx;
}
.select_type, .input_area {
  flex: 1;
  display:flex;
  align-items:center;
  height:80rpx;
  padding:0 30rpx;
  box-sizing:border-box;
}
.select_type {
  color: #666666;
  position: relative;
}
.select_type icon {
  position: absolute;
  right: 30rpx;
  top: 0;
  line-height: 80rpx;
  z-index: 0;
}
.type_title, .input_title {
  flex: 0 1 auto;
  font-size: 28rpx;
}
.type_picker {
  flex: 1;
  height:80rpx;
  padding:0 30rpx;
}
.picker {
  width:100%;
  height:80rpx;
  display:flex;
  align-items:center;
}
.input_con {
  display:flex;
  box-sizing:border-box;
  height:80rpx;
  padding:0 30rpx;
  flex:1;
  align-items:center;
}
.input_con .unit {
  flex:0 1 auto;
  color:#f44336;
}
.input_con input {
  position:relative;
  height:80rpx;
  flex:1;
  box-sizing: border-box;
}
.input_con input::after{
  content:" ";
  width:200%;
  height:200%;
  position:absolute;
  top:0;
  left:0;
  border-bottom:1px solid #BDBDBD;
  -webkit-transform:scale(0.5);
  transform:scale(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}
.btn_area{
  margin-top: 60rpx;
  padding:0 30rpx;
}